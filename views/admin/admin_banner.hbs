<div class="container">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body ">
                <div class="row mt-5 mb-3 btn btn-gradient-light">
                    <a style="text-decoration:none;color:black" href="">Banner</a>
                </div>
                
                <div class="d-flex justify-content-start ">
                    {{#each banners}}
                    <div class="card border border-dark shadow ms-3" style="width: 18rem;">
                        <img src="/banner_images/{{this._id}}.jpg" class="card-img-top" alt="">
                        <div class="card-body">
                            <h5 class="card-title">Name : {{this.Name}}</h5>
                            <a href="/admin/del_banner/{{this._id}}" onclick="return confirm('Confirm Delete {{this.Name}} ?? ')" class="btn btn-light border border-dark shadow ms-4">Remove</a>
                        </div>
                    </div>
                    {{/each}}
                    
                    <div class="card border border-dark ms-3 shadow" style="width: 18rem; ">
                        
                        <div class="card-body d-flex justify-content-center">
                            <button class="border border-none" ><a href="/admin/add_banner"><img src="/images/icons8-plus-48.png" alt=""></a></button>      
                        </div>
                       
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>